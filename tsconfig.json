{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "baseUrl": "./packages",
    "paths": {
      "@ds-starter/*": ["./*/src"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.tsx"]
}
